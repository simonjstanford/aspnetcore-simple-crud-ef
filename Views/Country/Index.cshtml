@model List<GlobalCityManager.Models.Country>

@{
    ViewData["Title"] = "Index";
}

<h2>All Countries</h2>

<table>
    <tr>
        <th>National Flag</th>
        <th>Code</th>
        <th>Name</th>
        <th>Region</th>
    </tr>

    @foreach (var country in Model)
    {
    <tr>
        <td><img src="@country.NationalFlag" height="20"/></td>
        <td>@country.Code</td>
        <td>@Html.ActionLink(country.Name, "Detail", new { code = country.Code } )</td>
        <td>@country.Region</td>
    </tr>
    }
</table>

